<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cfdialog_negative_button_color"
    tools:context="com.kce.avs.Enablers">

    <EditText
        android:id="@+id/edtnin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:hint="Enter NationalID or Phone Number"
        android:textColor="@color/white" />


    <Button
        android:layout_width="match_parent"
        android:id="@+id/trackinghub"
        android:layout_marginTop="200dp"
        android:background="@color/cfdialog_negative_button_pressed_color"
        android:text="Tracking Hub"
        android:layout_marginBottom="50dp"
        android:layout_height="wrap_content" />
</RelativeLayout>